<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Grivinca_Curcean_Medii.AboutPage"
             Title="AboutPage">
    <VerticalStackLayout Spacing="10" Margin="10">
        <HorizontalStackLayout Spacing="10">
            <Image Source="rent_car.png"
                   SemanticProperties.Description="Car List"
                   HeightRequest="64" />
            <Label FontSize="22" FontAttributes="Bold" Text="List of rental cars" VerticalOptions="End" />
        </HorizontalStackLayout>
        <Label Text="This app will help you choose the best car for you" />

    </VerticalStackLayout>
</ContentPage>